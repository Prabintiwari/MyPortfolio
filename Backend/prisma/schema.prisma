generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole   @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Project {
  id          String   @id @default(uuid())
  title       String
  description String
  image       String
  category    String
  tags        String[]
  liveDemo    String?
  github      String?
  isFeatured  Boolean  @default(false)
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  date        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("projects")
}

model Service {
  id          String   @id @default(uuid())
  icon        String
  title       String
  description String
  features    String[]
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("services")
}

model Skill {
  id        String   @id @default(uuid())
  name      String
  level     Int
  icon      String
  color     String
  category  String   @default("technical")
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("skills")
}

model Experience {
  id          String   @id @default(uuid())
  title       String
  company     String
  period      String
  description String
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("experiences")
}

model Contact {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String?
  subject   String?
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contacts")
}

model SocialLink {
  id        String   @id @default(uuid())
  icon      String
  label     String
  href      String
  color     String
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("social_links")
}

model About {
  id               String   @id @default(uuid())
  name             String
  title            String   
  subtitle         String?  
  bio              String   
  description      String?  
  avatar           String?  
  resume           String?  
  
  // Stats for display
  yearsExperience  Int     
  projectsCompleted Int    
  openSource       Int      
  
  // Additional info
  globalReachText  String?  @default("Creating solutions that connect people worldwide")
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("about")
}

model ContactMethod {
  id          String   @id @default(uuid())
  icon        String
  title       String
  value       String
  description String
  gradient    String
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("contact_methods")
}


